{
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "concat-cli": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "terser": "^5.31.6",
    "sass": "^1.85.0"
  },
  "scripts": {
    "watch": "npm-run-all --parallel bs watch:*",
    "build": "npm-run-all --parallel build:*",
    "bs": "browser-sync start --server --files \"*\"",
    "watch:css": "sass scss/style.scss:style.css --watch",
    "build:css": "rimraf *.css.map && sass --no-source-map --style=compressed sass/style.scss:style.css",
    "build:js": "concat -o main.js assets/js/frontend/*.js && terser main.js -c -m --output main.js"
  }
}
